# Shell in a box daemon configuration
# For details see shellinaboxd man page

# Basic options
USER={{ shellinabox_user }}
GROUP={{ shellinabox_group }}
CERTDIR=/var/lib/shellinabox
PORT={{ shellinabox_port }}
OPTS="{% if shellinabox_disable_ssl %}--disable-ssl {% endif %}{% if shellinabox_disable_ssl_menu %}--disable-ssl-menu {% endif %}{% if shellinabox_disable_ssl_menu %}--localhost-only {% endif %}-s /:LOGIN"


